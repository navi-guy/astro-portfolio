---
import { PaginationHeader } from '@/components/PaginationHeader';
import { Section } from '@/components/Section';
import Base from '@/templates/Base.astro';

const titleSuffix = ` - Summer Puzzle`;
const titleBase = `Licy`;
const title = titleBase + titleSuffix;
const description = 'Licy puzzle';
---

<Base head={{ title, description }}>
  <Section>
    <PaginationHeader
      title='Premios y castigos'
      description='🏝 Bienvenida al puzzle del verano 🏝'
    />
  </Section>
  <Section>
    <!-- <div class='content-center'>
     
    </div> -->
    <div class='flex flex-col'>
      <img
        src='/assets/images/grua.png'
        alt='Web in Construction'
        class='m-auto block w-1/2'
      />
    </div>
    <div class='grid content-center'>
      <h1 class='mx-auto max-w-screen-lg px-3 py-6 !text-3xl !text-orange-400'>
        Puzzle on construction - Please wait miau 🐱‍👓
      </h1>
    </div>
    <!-- <BlogGallery postList={page.data} /> -->
  </Section>
</Base>
